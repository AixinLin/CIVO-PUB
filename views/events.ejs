<!DOCTYPE html>
<%include ../views/header %>
        <!-- end: Header -->


        <!-- Page title -->
        <section id="page-title" data-parallax-image="images/parallax/5.jpg">
            <div class="container">
                <div class="page-title">
                    <h1>Events</h1>
                    <span>Inspiration comes of working every day.</span>
                </div>
                <div class="breadcrumb">
                    <ul>
                        <li><a href="#">Home</a > </li>
                        <li><a href="#">Shortcodes</a > </li>
                        <li class="active"><a href="#">Cards</a > </li>
                    </ul>
                </div>
            </div>
        </section>
        <!-- end: Page title -->
        <!-- Page Content -->
        <section class="sidebar-right">
            <div class="container">
                <div class="row">
                    <% events.forEach((event, i) => { %>
                        <div class="col-lg-4">
                            <div class="card">
                                <img class="card-img-top" src="../images/<%= event.picture %>" alt="Card image cap">
                                <div class="card-body">
                                    <h5 class="card-title"><%= event.name %></h5>
                                    <p class="card-text"><%= event.location %></p >
                                    <p class="card-text"><%= event.description %></p >
                                    <a href="/events/<%= event._id %>" class="btn btn-primary">Details</a >
                                </div>
                            </div>
                        </div>
                    <% }) %>
                </div>
            </div>
        </section>
        <!-- end: Page Content -->

        <!-- Footer -->
<%include ../views/footer %>
        <!-- end: Footer -->

    </div>
    <!-- end: Wrapper -->

    <!-- Go to top button -->
    <a id="goToTop"><i class="fa fa-angle-up top-icon"></i><i class="fa fa-angle-up"></i></a >

    <!--Plugins-->
    <script src="js/jquery.js"></script>
    <script src="js/plugins.js"></script>

    <!--Template functions-->
    <script src="js/functions.js"></script>


</body>

</html>
