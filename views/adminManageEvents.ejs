<!DOCTYPE html>
<%include ../views/header %>

        <!-- end: Header -->

        <!-- Page title -->
        <section id="page-title" data-parallax-image="/images/parallax/5.jpg">
            <div class="container">
                <div class="page-title">
                    <h1>Exec</h1>
                    <span>Chinese International Volunteer Organization (CIVO)</span>
                </div>

            </div>
        </section>
        <!-- end: Page title -->

        <!-- Page Content -->
        <section >

            <div class="container">
                        <table class="table table-striped">
                            <thead>
                                <tr>
                                    <th>Name</th>
                                    <th>Location</th>
                                    <th>Type</th>
                                    <th>Description</th>
                                    <th>Date</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% events.forEach((event, i) => { %>
                                <tr>
                                    <td><a href=""><%=event.name%></a ></td>
                                    <td><%=event.location%></td>
                                    <td><%=event.type%></td>
                                    <td><%=event.description%></td>
                                    <td><%=event.date%></td>

                                    <td>
                                        <form method="post" action="/admin/manageEvents/<%=event._id%>/delete">
                                            <button style="border:none" type="submit"><i class="fa fa-trash fa-lg" aria-hidden="true"></i></button>
                                            <!-- <a href="#" onclick="return confirm('Are you sure to delete this record ?');"><i class="fa fa-trash fa-lg" aria-hidden="true"></i></a > -->
                                        </form>


                                    </td>
                                </tr>
                                <% }) %>
                            </tbody>
                        </table>
            </div>
        </section>
        <!-- end: Page Content -->


        <!-- Footer -->
      <%include ../views/footer %>
        <!-- end: Footer -->

    </div>
    <!-- end: Wrapper -->

    <!-- Go to top button -->
    <a id="goToTop"><i class="fa fa-angle-up top-icon"></i><i class="fa fa-angle-up"></i></a>

    <!--Plugins-->
    <script src="/js/jquery.js"></script>
    <script src="/js/plugins.js"></script>

    <!--Template functions-->
    <script src="/js/functions.js"></script>
</body>

</html>
