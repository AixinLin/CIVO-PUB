<!DOCTYPE html>
<%include ../views/header %>
        <!-- end: Header -->

        <!-- Page title -->
        <section id="page-title" data-parallax-image="/images/parallax/4.png">
            <div class="container">
                <div class="page-title">
                    <h1>Exec</h1>
                    <span>Chinese International Volunteer Organization (CIVO)</span>
                </div>

            </div>
        </section>
        <!-- end: Page title -->

        <!-- Page Content -->
        <section>
            <div class="container">
                <div class="row">
                    <div class="col-lg-7 center">

                        <h3>Add Course</h3>
                        <form method="POST" enctype="multipart/form-data">
                            <div class="form-group ">
                                <label for="example-text-input">Name</label>
                                <div>
                                    <input name="name" class="form-control" type="text" value="" id="example-text-input">
                                </div>
                            </div>
                            <div class="form-group ">
                                <label for="example-text-input" >Location</label>
                                <div>
                                    <input name="location" class="form-control" type="text" value="" id="example-text-input">
                                </div>
                            </div>


                            <div class="form-group ">
                                <label for="example-datetime-local-input" >Start Time</label>
                                <div >
                                    <input name="start_time" class="form-control" type="datetime-local" id="example-datetime-local-input">
                                </div>
                            </div>
                            <div class="form-group ">
                                <label for="example-datetime-local-input" >End Time</label>
                                <div >
                                    <input name="end_time" class="form-control" type="datetime-local" id="example-datetime-local-input">
                                </div>
                            </div>

                            <button type="submit" class="btn">Submit</button>

                        </form>

                    </div>
            </div>
        </section>
        <!-- end: Page Content -->


        <!-- Footer -->
      <%include ../views/footer %>
        <!-- end: Footer -->

    </div>
    <!-- end: Wrapper -->

    <!-- Go to top button -->
    <a id="goToTop"><i class="fa fa-angle-up top-icon"></i><i class="fa fa-angle-up"></i></a>

    <!--Plugins-->
    <script src="/js/jquery.js"></script>
    <script src="/js/plugins.js"></script>

    <!--Template functions-->
    <script src="/js/functions.js"></script>
</body>

</html>
