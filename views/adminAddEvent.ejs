<!DOCTYPE html>
<%include ../views/header %>
        <!-- end: Header -->

        <!-- Page title -->
        <section id="page-title" data-parallax-image="/images/parallax/3.png">
            <div class="container">
                <div class="page-title">
                    <h1>Exec</h1>
                    <span>Chinese International Volunteer Organization (CIVO)</span>
                </div>

            </div>
        </section>
        <!-- end: Page title -->

        <!-- Page Content -->
        <section >
            <div class="container">
                <div class="row">
                    <div class="col-lg-7 center">

                        <h3>Add Event</h3>
                        <form method="POST" enctype="multipart/form-data">
                            <div class="form-group ">
                                <label for="example-text-input">Name</label>
                                <div>
                                    <input name="name" class="form-control" type="text" value="" id="example-text-input">
                                </div>
                            </div>
                            <div class="form-group ">
                                <label for="example-text-input" >Address</label>
                                <div>
                                    <input name="address" class="form-control" type="text" value="" id="example-text-input">
                                </div>
                            </div>
                            <div class="form-row">
                                <div class="form-group col-md-6">
                                    <label for="inputCity">City</label>
                                    <input name="city" class="form-control" id="inputCity" type="text">
                                </div>
                                <div class="form-group col-md-6">
                                    <label for="inputZip">Zip</label>
                                    <input name="zip" class="form-control" id="inputZip" type="text">
                                </div>
                            </div>

                            <div class="form-group ">
                                <label for="example-datetime-local-input" >Date and time</label>
                                <div >
                                    <input name="date" class="form-control" type="datetime-local" id="example-datetime-local-input">
                                </div>
                            </div>
                            <div class="form-group">
                                <label for="inputCity">Type</label>
                                <div>
                                    <div class="form-check">
                                        <input class="form-check-input" name="type" id="exampleRadios1" value="Membership" checked="" type="radio">
                                        <label class="form-check-label" for="exampleRadios1">
                                            Membership
                                        </label>
                                    </div>
                                    <div class="form-check">
                                        <input class="form-check-input" name="type" id="exampleRadios2" value="Non-Membership" type="radio">
                                        <label class="form-check-label" for="exampleRadios2">
                                            Non-Membership
                                        </label>
                                    </div>
                                </div>
                            </div>
                            <div class="form-group">
                                <label for="exampleFormControlFile1">Upload Picture</label>
                                <input type="file" name="picture">
                            </div>
                            <button type="submit" class="btn">Submit</button>

                        </form>

                    </div>
            </div>
        </section>
        <!-- end: Page Content -->


        <!-- Footer -->
      <%include ../views/footer %>
        <!-- end: Footer -->

    </div>
    <!-- end: Wrapper -->

    <!-- Go to top button -->
    <a id="goToTop"><i class="fa fa-angle-up top-icon"></i><i class="fa fa-angle-up"></i></a>

    <!--Plugins-->
    <script src="/js/jquery.js"></script>
    <script src="/js/plugins.js"></script>

    <!--Template functions-->
    <script src="/js/functions.js"></script>
</body>

</html>
