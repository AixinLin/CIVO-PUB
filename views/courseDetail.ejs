<!DOCTYPE html>
<%include ../views/header %>
        <!-- end: Header -->


        <!-- Page title -->
        <section id="page-title" data-parallax-image="/images/parallax/5.jpg">
            <div class="container">
                <div class="page-title">
                    <h1>Add Course</h1>
                    <span>Inspiration comes of working every day.</span> </div>
                <div class="breadcrumb">
                    <ul>
                        <li><a href="/#">Home</a> </li>
                        <li><a href="/#">Shortcodes</a> </li>
                        <li class="active"><a href="/#">Forms</a> </li>
                    </ul>
                </div>
            </div>
        </section>
        <!-- end: Page title -->

        <!-- start: Form-->
        <section>
            <div class="container">
                    <div class="row">
                        <div class="col-lg-12 mb-4">
                            <h4><%= course.name %></h4>

                        </div>
                        <% course.attendee.forEach((user) => {  %>
                            <div class="col-lg-3">
                                    <div class="card">
                                        <div class="card-body">
                                            <h6 class="card-title"><%= user.first_name %> <%= user.last_name %></h6>
                                            <h6 class="card-title"><%= user.email %></h5>
                                        </div>
                                    </div>
                            </div>
                        <% }) %>
                        <div class="col-lg-12">
                            <div class="line"></div>
                        </div>

                    </div>
            </div>
       </section>
       <!-- end: Form -->


        <!-- Footer -->
<%include ../views/footer %>
        <!-- end: Footer -->

    </div>
    <!-- end: Wrapper -->

    <!-- Go to top button -->
    <a id="goToTop"><i class="fa fa-angle-up top-icon"></i><i class="fa fa-angle-up"></i></a>

    <!--Plugins-->
    <script src="/js/jquery.js"></script>
    <script src="/js/plugins.js"></script>

    <!--Template functions-->
    <script src="/js/functions.js"></script>
</body>

</html>
